<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
<script>
document.addEventListener('livewire:initialized', () => {
    let calendar;
    
    function initCalendar() {
        const calendarEl = document.getElementById('calendar');
        if (!calendarEl) {
            console.error('Elemento #calendar não encontrado');
            return;
        }

        console.log('Inicializando FullCalendar...');
        console.log('Eventos:', @json($events));

        calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
            },
            locale: 'pt-br',
            buttonText: {
                today: 'Hoje',
                month: 'Mês',
                week: 'Semana',
                day: 'Dia',
                list: 'Lista'
            },
            height: 'auto',
            editable: true,
            droppable: true,
            events: @json($events),
            eventClick: function(info) {
                @this.viewEvent(info.event.id);
            },
            eventDrop: function(info) {
                @this.updateEventDate(
                    info.event.id,
                    info.event.start.toISOString(),
                    info.event.end ? info.event.end.toISOString() : info.event.start.toISOString()
                );
            },
            eventResize: function(info) {
                @this.updateEventDate(
                    info.event.id,
                    info.event.start.toISOString(),
                    info.event.end.toISOString()
                );
            },
            eventContent: function(arg) {
                let html = '<div class="fc-event-main-frame p-1">';
                html += '<div class="fc-event-title-container">';
                html += '<div class="fc-event-title fc-sticky font-semibold">' + arg.event.title + '</div>';
                html += '</div>';
                html += '<div class="text-xs mt-1">';
                html += '<i class="' + arg.event.extendedProps.phase_icon + ' mr-1"></i>';
                html += arg.event.extendedProps.phase_label;
                if (arg.event.extendedProps.progress) {
                    html += ' - ' + arg.event.extendedProps.progress + '%';
                }
                html += '</div>';
                html += '</div>';
                
                return { html: html };
            },
            dateClick: function(info) {
                @this.openQuickCreate(info.dateStr);
            }
        });

        calendar.render();
        
        // Esconder loading e mostrar calendário
        const loadingEl = document.getElementById('calendar-loading');
        if (loadingEl) loadingEl.style.display = 'none';
        calendarEl.style.display = 'block';
        
        console.log('FullCalendar renderizado com sucesso!');
    }

    // Aguardar um pouco para garantir que o DOM está pronto
    setTimeout(() => {
        initCalendar();
    }, 300);

    Livewire.on('refreshCalendar', () => {
        console.log('Evento refreshCalendar recebido');
        if (calendar) {
            calendar.refetchEvents();
        }
    });
});

// Fallback: também tentar inicializar no DOMContentLoaded
document.addEventListener('DOMContentLoaded', () => {
    console.log('DOM Content Loaded');
});
</script>
@endpush
